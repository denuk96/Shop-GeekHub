<div class="container">
  <% if comment.body? %>
    <p>
      <strong>Commenter:</strong>
      <%= comment.user.email %>
    </p>

    <p>
      <strong>Comment:</strong>
      <%= comment.body %>
    </p>
    <p>
      <strong>Rating:</strong>
      <%= comment.rating %>
    </p>

    <p>
      <%= link_to 'Destroy Comment', [comment.product, comment], method: :delete,
                  data: { confirm: 'Are you sure?' }, class:'link' %>
    </p>
  <% end %>
</div>