<div class="container">
  <h1><%= t('session.login') %></h1>
  <%= form_tag sessions_path do |_form| %>
    <div class='form-group row justify-content-centre'>
      <%= label_tag :email , t('session.email') %>
      <%= text_field_tag :email , nil, class: "form-control" %>
    </div>
    <div class='form-group row'>
      <%= label_tag :password, t('session.password') %>
      <%= password_field_tag :password , nil, class: "form-control" %>
    </div>
    <%= submit_tag t('session.login'), class: "btn btn-outline-light btn-lg btn-block" %>
  <% end %>
</div>