<%= form_with(model: [ :admin, @category ],local: true) do |form| %>
  <% if @category.errors.any? %>
    <div class="alert alert-danger">
      <h2>
        <%= pluralize(@category.errors.count, "" ) %>
        <%= @category.errors.count > 1 ? t('errorrs') : t('error')  %>
      </h2>
      <ul>
        <% @category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control"%>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control"%>
  </div>

  <div class="field">
    <%= form.file_field :image %>
  </div>

  <br>
  <div class="text-center actions">
    <%= form.submit t('.submit', action: @category.new_record? ? t('create') : t('edit')), class: "btn btn-light" %>
  </div>
<% end %>
