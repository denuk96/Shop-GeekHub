<div class="container">
  <div class="form-inline">
    <%= form_tag(admin_categories_path, method: "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search", class:'form-control' %>
      <button type="submit" class="btn btn-outline-light"><i class="fa fa-search"></i></button>
    <% end %>
  </div>
  <h1>Categories</h1>
  <%= link_to 'New Category', new_admin_category_path, class: 'btn btn-primary' %>
  <table>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
    <ul>
      <% if @categories.present? %>
        <% @categories.each do |category| %>
          <tr>
            <td>
              <%= link_to admin_category_path(category), class:'link' do %>
                <%= category.title %>
              <% end %>
            </td>
            <td><%=h truncate(category.description, length: 100) %></td>
            <td>
              <%= link_to 'Show', admin_category_path(category) %>
              <%= link_to 'Edit', edit_admin_category_path(category) %>
              <%= link_to 'Destroy', admin_category_path(category), method: :delete,
                            data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <td class="search alert alert-secondary">
          There are no items containing the term(s) <%= params[:search] %>.
        </td>
      <% end %>
    </ul>
  </table>
  <div class="row justify-content-center">
    <%= will_paginate(@things, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, class: 'pagination-sm') %>
  </div>
</div>