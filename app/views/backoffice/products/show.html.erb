<div class="container" >
 <div class="show">
    <p>
      <strong>Title: </strong><%= @product.title.capitalize %>
    </p>
    <p>
      <strong>Category: </strong>
      <%= link_to admin_category_path(@product.category_id) do %>
        <%= @product.category.title %>
      <% end %>
    </p>
    <p>
      <strong>Description: </strong><%= @product.description.capitalize %>
    </p>
    <p>
      <strong>Price: </strong> <%= @product.price %>
    </p>
     <div>
<!--       за две ночи дошло..сон для слабаков!-->
       <% @product.images.each_with_index do |image, index| %>
         <%= image_tag(image.url(:medium), id: index, class: 'image') %>
           <script type="text/javascript" charset="utf-8">
               $("#<%= index %>").click(function(){	// Событие клика на маленькое изображение
                   var img = $(this);	// Получаем изображение, на которое кликнули
                   var src = img.attr('src'); // Достаем из этого изображения путь до картинки
                   $("body").append("<div class='popup'>"+ //Добавляем в тело документа разметку всплывающего окна
                       "<div class='popup_bg'></div>"+ // Блок, который будет служить фоном затемненным
                       "<img src='<%= image %>' class='popup_img'  />"+ // Само увеличенное фото
                       "</div>");
                   $(".popup").fadeIn(200); // Медленно выводим изображение
                   $(".popup_bg").click(function(){	// Событие клика на затемненный фон
                       $(".popup").fadeOut(200);	// Медленно убираем всплывающее окн
                       setTimeout(function() {	// Выставляем таймер
                           $(".popup").remove(); // Удаляем разметку всплывающего окна
                       }, 200);
                   });
               });
           </script>
       <% end %>
     </div>
 </div>
    <br>
    <div style="font-size: 30px">
      <%= link_to 'Edit', edit_admin_product_path(@product), class: 'btn btn-outline-light' %>
      <%= link_to 'Destroy', admin_product_path(@product), method: :delete,
                  data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-light' %>
      <%= link_to 'Back', :back, class: 'btn btn-outline-light' %>
    </div>
  </div>
</div>

